<UserControl
    x:Class="WPFInvoiceSystem.Views.InvoicesListView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPFInvoiceSystem.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel>
        <TextBlock Margin="0,0,0,20">This will be the Invoices List View</TextBlock>

        <StackPanel
            MaxHeight="50"
            VerticalAlignment="Top"
            Orientation="Horizontal">
            <Button
                Margin="0,0,20,0"
                Command="{Binding GoBackCommand}"
                Content="Regresar" />
            <Button Command="{Binding GoToNewInvoiceFormCommand}" Content="Nueva Factura" />
        </StackPanel>
    </StackPanel>
</UserControl>

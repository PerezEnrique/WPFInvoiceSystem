<UserControl
    x:Class="WPFInvoiceSystem.UserControls.MainHeader"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:config="clr-namespace:System.Configuration;assembly=System.Configuration"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPFInvoiceSystem.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>

        <StackPanel Orientation="Horizontal">

            <Image
                MaxWidth="100"
                Margin="0,0,10,0"
                Source="pack://application:,,,/WPFInvoiceSystem;component/Resources/Images/logo-demo.png" />

            <StackPanel>
                <TextBlock
                    FontSize="24"
                    FontWeight="ExtraBold"
                    Text="Company Name" />
                <TextBlock FontSize="12" Text="Company info" />
                <TextBlock FontSize="12" Text="Company info" />
            </StackPanel>

        </StackPanel>

    </Grid>
</UserControl>
